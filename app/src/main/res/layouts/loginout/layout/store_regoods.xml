<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="7dp">

        <ImageButton
            android:id="@+id/store_RecommendImg0"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/store_img6" />

        <TextView
            android:id="@+id/store_RecommendStore0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@+id/store_RecommendImg0"
            android:text="스토어이름"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/store_RecommendTitle0"
            android:layout_width="207dp"
            android:layout_height="44dp"
            android:layout_below="@+id/store_RecommendStore0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-25dp"
            android:layout_toRightOf="@+id/store_RecommendImg0"
            android:text="상품제목"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/store_RecommendReview0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_RecommendTitle0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@+id/store_RecommendImg0"
            android:text="리뷰수"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/store_RecommendPrice0"
            android:layout_width="207dp"
            android:layout_height="44dp"
            android:layout_below="@+id/store_RecommendReview0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-30dp"
            android:layout_toRightOf="@+id/store_RecommendImg0"
            android:text="상품가격"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>