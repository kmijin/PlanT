<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="10dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

         <ImageView
             android:id="@+id/post_UserImageWrite"
             android:layout_width="40dp"
             android:layout_height="40dp"
             tools:srcCompat="@mipmap/store_icon" />

         <TextView
             android:id="@+id/post_UserNameWrite"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:ems="10"
             android:paddingStart="10dp"
             android:text="user1"
             android:textSize="15dp" />

         <TextView
             android:id="@+id/post_PostDateWrite"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:paddingStart="20dp"
             android:text="2021-11-24" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="336dp"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:padding="5dp">

         <TextView
             android:id="@+id/post_TitleWrite"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="#000000"
             android:textSize="20sp"
             android:textStyle="bold"
             tools:text="title" />

         <TextView
             android:id="@+id/post_ContentWrite"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="#000000"
             android:layout_marginTop="10dp"
             android:textSize="15sp"
             android:textStyle="bold"
             tools:text="contents" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">
         <ImageView
             android:id="@+id/post_LikeWrite"
             android:layout_width="wrap_content"
             android:layout_height="25dp"
             android:layout_margin="3dp"
             android:src="@drawable/post_ic_eplant" />

         <TextView
             android:id="@+id/post_LikeNumWrite"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="7dp"
             android:hint=" "
             android:textSize="15dp" />
         <ImageView
             android:id="@+id/post_ChatWrite"
             android:layout_width="wrap_content"
             android:layout_height="25dp"
             android:layout_margin="3dp"
             android:src="@drawable/post_ic_chat" />
         <ImageView
             android:id="@+id/post_ShareWrite"
             android:layout_width="wrap_content"
             android:layout_height="25dp"
             android:layout_margin="3dp"
             android:src="@drawable/post_ic_share" />
      </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:background="#DDDDDD" />
   </LinearLayout>

</androidx.cardview.widget.CardView>